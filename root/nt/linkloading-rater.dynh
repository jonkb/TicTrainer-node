<!DOCTYPE html>
<html lang="en-us">
	<head>
		<title>Loading Link</title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" type="text/css" href="/stylesheets/bgStyle.css">
	</head>
	<body>
    <section class="page-header">
			<div class="header-navbar">
				<a href="/" class="logo"></a>
				<h1>Loading Link</h1>
				<h2>rater - **[lid]**</h2>
				<div style="clear: both;"></div>
			</div>
    </section>
    <section class="main-content">
			<p style='text-align:center;'><img src='/media/loading.gif' alt='Loading' width='128' height='128' align='middle'></p>
    </section>
		<script>
			//Change the URL bar
			var url = '/nt/linkloading-rater.dynh';
			window.history.pushState("", "Link Loading: Rater", url);
			
			//30 tries, 2s per try --> 1 min
			var tryN = 0;
			var max_tries = 30;
			var period = 2000;
			
			look();
			function look(){
				if(tryN < max_tries){
					var xhr = new XMLHttpRequest();
					var reqBody = 'id=a&lid=**[lid]**';
					xhr.open('POST', url, true);
					xhr.setRequestHeader('Content-type', 'text/plain');
					xhr.onreadystatechange = function(){
						/*Possible responses from the server: 
							"wait", error page, sessionstart-trainer page
						*/
						if(xhr.readyState == 4){
							if(xhr.responseText == 'wait'){//retry
								setTimeout(look, period);//loop
							}
							else{
								//This line is necessary to patch a dumb bug in Microsoft Edge. https://developer.microsoft.com/en-us/microsoft-edge/platform/issues/13171974/
								var response = xhr.responseText;
								document.open();
								document.write(response);
								document.close();
							}
						}
					};
					xhr.send(reqBody);
					tryN++;
				}
				else{//Timeout
					//I'm really just requesting the TOE page in a roundabout way.
					//It's a dynh, so there's no easy way to just GET and redirect right now.
					var xhr = new XMLHttpRequest();
					//ID & pw are not required because it's just returning the TOE page
					var reqBody = 'timeout=true';
					xhr.open('POST', url, true);
					xhr.setRequestHeader('Content-type', 'text/plain');
					xhr.onreadystatechange = function(){
						if(xhr.readyState == 4){
							var response = xhr.responseText;
							document.open();
							document.write(response);
							document.close();
						}
					};
					xhr.send(reqBody);
				}
			}
		</script>
	</body>
</html>