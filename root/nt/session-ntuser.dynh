<!DOCTYPE html>
<html lang="en-us">
	<head>
		<title>NewTics Session: User</title>
		<meta name="viewport" content="width=device-width, initial-scale=1">
		<link rel="stylesheet" type="text/css" href="/stylesheets/bgStyle.css">
	</head>
	<body>
    <section class="page-header">
			<div class="header-navbar">
				<a href="/" class="logo"></a>
				<h1>NewTics Session: User</h1>
				<div style="clear: both;"></div>
			</div>
    </section>
    <section class="main-content">
			
			Reward Tokens:<br>
			<div id="tokens">
				
			</div>
			
    </section>
		<script>
			//Change the URL bar
			var url = "/nt/session-ntuser.dynh";
			if(window.history.pushState)
				window.history.pushState("", "NewTics Session: User", url);
			
			var already_left = false;
			window.onbeforeunload = endS;
			window.onpagehide = endS;
			
			//stype is one of: "baseline", "verbal", "DRZ", "NCR"
			var reward_scheme = "**[stype]**";
			//alert("This should be a "+reward_scheme+" session");
			
			const ms_per_reward = 10*1000;
			const lag_adjust = 25;
			const ms_interval = ms_per_reward - lag_adjust
			const session_length = 5*60*1000;
			const token_HTML = "\u2B50"
			
			//Last recorded length of the session file. Used to determine if the file has changed.
			var lastL = **[sesL]**;
			
			if(reward_scheme == "DRZ")
				setTimeout(check_for_tic, ms_interval);
			if(session_length != null)
				setTimeout(endS, session_length)
			
			/*Procedure: Check when the last tic was,
				If it's been 10s, give reward and check again in 10s
				If not, check in [10-(Now-TicTime)]s
			*/
			function check_for_tic(){
				var xhr = new XMLHttpRequest();
				var reqBody = 'reqType=check&id=**[id]**&sesL='+lastL;
				xhr.open('POST', url, true);
				xhr.setRequestHeader('Content-type', 'text/plain');
				xhr.onreadystatechange = function(){
					if(xhr.readyState == 4){
						if(xhr.status == 200){
							var fields = xhr.responseText.split('&');
							lastL = fields[0];
							lastTic = null;
							for(i=1; i<fields.length; i++){
								if(fields[i].indexOf('tic') != -1){
									lastTic = new Date(fields[i].split("@")[1])
								}
								else if(fields[i] == 'end'){
									endS();
									return;
								}
							}
							timeSince = Date.now() - lastTic;
							if(timeSince > ms_interval){
								send_reward();
							}
							else{
								setTimeout(check_for_tic, ms_interval-timeSince);
							}
						}
						else{//For an Error Page
							var response = xhr.responseText;
							document.open();
							document.write(response);
							document.close();
						}//ERROR
					}
				};
				xhr.send(reqBody);
			}
			
			function send_reward(){
				document.getElementById('tokens').innerHTML += token_HTML;
				setTimeout(check_for_tic, ms_interval);
				var xhr = new XMLHttpRequest();
				var reqBody = 'reqType=logtoken&id=**[id]**';
				xhr.open('POST', url, true);
				xhr.onreadystatechange = function(){
					if(xhr.readyState == 4){
						if(xhr.status != 200){//Display Error Page
							var response = xhr.responseText;
							document.open();
							document.write(response);
							document.close();
						}
					}
				}
				xhr.send(reqBody);
			}
			
			function endS(){
				if(!already_left){
					var xhr = new XMLHttpRequest();
					var reqBody = 'reqType=end&id=**[id]**&pw=**[pw]**&lid=a';
					xhr.open('POST', url, true);
					xhr.onreadystatechange = function(){
						if(xhr.readyState == 4){
							var response = xhr.responseText;
							document.open();
							document.write(response);
							document.close();
						}
					}
					xhr.send(reqBody);
					already_left = true;
				}
			}
		</script>
	</body>
</html>